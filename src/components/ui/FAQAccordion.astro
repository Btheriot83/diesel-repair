---
const { faqs = [] } = Astro.props;
---
<section aria-labelledby="faqs" class="my-8">
  <h2 id="faqs" class="sr-only">Frequently Asked Questions</h2>
  <div class="divide-y divide-slate-200 rounded-2xl border border-slate-200 bg-white">
    {faqs.map((f, idx) => (
      <details class="group p-4 open:bg-slate-50 open:rounded-2xl transition-colors">
        <summary class="cursor-pointer list-none">
          <div class="flex items-start justify-between">
            <h3 class="text-base md:text-lg font-semibold text-slate-900 pr-4">{f.question}</h3>
            <span class="ml-2 text-slate-500 group-open:rotate-180 transition-transform" aria-hidden="true">â–¾</span>
          </div>
        </summary>
        <div class="mt-2 text-slate-700 leading-relaxed">
          {f.answer}
        </div>
      </details>
    ))}
  </div>
</section>
