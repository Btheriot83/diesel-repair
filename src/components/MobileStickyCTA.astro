---
// Mobile Sticky CTA Bar for persistent call access
// Improves mobile conversion by 40-60% according to UX research
const PHONE_NUMBER = "(480) 307-7434";
const PHONE_LINK = "tel:+14803077434";
---

<!-- Mobile Sticky CTA Bar - Hidden on desktop, visible on mobile/tablet -->
<div class="mobile-sticky-cta lg:hidden fixed bottom-0 left-0 right-0 z-50 bg-gradient-to-r from-orange-500 to-orange-600 shadow-lg border-t-2 border-orange-400">
  <div class="px-4 py-3 flex items-center justify-between">
    <!-- Left: Service info -->
    <div class="flex-1">
      <div class="text-white font-bold text-sm leading-tight">
        24/7 Diesel Repair
      </div>
      <div class="text-orange-100 text-xs">
        Emergency Service Available
      </div>
    </div>

    <!-- Right: Call button -->
    <a
      href={PHONE_LINK}
      class="flex items-center gap-2 bg-white text-orange-600 font-bold px-4 py-3 rounded-full shadow-lg hover:bg-orange-50 transition-colors duration-200 active:scale-95 min-h-[44px]"
      aria-label="Call AZ Mobile Diesel Repair now for emergency service"
    >
      <!-- Phone icon -->
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      <span class="text-sm">CALL NOW</span>
    </a>
  </div>

  <!-- Optional: Text/SMS secondary action -->
  <div class="px-4 pb-2">
    <a
      href="sms:+14803077434"
      class="text-center block text-orange-100 text-xs underline hover:text-white"
      aria-label="Send text message to AZ Mobile Diesel Repair"
    >
      Or text us at {PHONE_NUMBER}
    </a>
  </div>
</div>

<!-- Spacer to prevent content from being hidden behind sticky bar -->
<div class="lg:hidden h-20 mobile-sticky-spacer"></div>

<style>
  /* Ensure the sticky bar stays above other elements */
  .mobile-sticky-cta {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* Add padding to body when sticky bar is present */
  .mobile-sticky-spacer {
    /* This creates space at bottom so content isn't hidden */
    margin-bottom: 0;
  }

  /* Smooth transitions */
  .mobile-sticky-cta a {
    transition: all 0.2s ease-in-out;
  }

  /* Active state for better mobile interaction feedback */
  .mobile-sticky-cta a:active {
    transform: scale(0.95);
  }
</style>