---
// Phoenix Metro Coverage section matching the screenshot
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Title -->
      <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-8">
        Phoenix Metro Coverage
      </h2>

      <!-- Major Corridors -->
      <div class="mb-8">
        <div class="inline-block bg-gray-900 text-white px-4 py-2 rounded-lg mb-4">
          <span class="font-bold">Major Corridors</span>
        </div>

        <div class="flex justify-center items-center gap-6 mb-8">
          <!-- I-10 Interstate Shield -->
          <div class="interstate-shield">
            <svg viewBox="0 0 90 108" class="w-20 h-24">
              <!-- Background shield -->
              <path d="M8 8 L82 8 L88 18 L88 90 L82 100 L8 100 L2 90 L2 18 Z"
                    fill="#1e3a8a" stroke="#ffffff" stroke-width="2.5"
                    stroke-linejoin="round" stroke-linecap="round"/>
              <!-- Inner shadow effect -->
              <path d="M8 8 L82 8 L88 18 L88 90 L82 100 L8 100 L2 90 L2 18 Z"
                    fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="1"
                    stroke-dasharray="0" style="filter: blur(0.5px)"/>
              <!-- Interstate text -->
              <text x="45" y="24" text-anchor="middle" fill="white"
                    font-family="system-ui, Arial, sans-serif" font-size="7" font-weight="700" letter-spacing="0.5px">INTERSTATE</text>
              <!-- Highway number -->
              <text x="45" y="68" text-anchor="middle" fill="white"
                    font-family="system-ui, Arial, sans-serif" font-size="36" font-weight="900" letter-spacing="-1px">10</text>
            </svg>
          </div>

          <!-- I-17 Interstate Shield -->
          <div class="interstate-shield">
            <svg viewBox="0 0 90 108" class="w-20 h-24">
              <!-- Background shield -->
              <path d="M8 8 L82 8 L88 18 L88 90 L82 100 L8 100 L2 90 L2 18 Z"
                    fill="#1e3a8a" stroke="#ffffff" stroke-width="2.5"
                    stroke-linejoin="round" stroke-linecap="round"/>
              <!-- Inner shadow effect -->
              <path d="M8 8 L82 8 L88 18 L88 90 L82 100 L8 100 L2 90 L2 18 Z"
                    fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="1"
                    stroke-dasharray="0" style="filter: blur(0.5px)"/>
              <!-- Interstate text -->
              <text x="45" y="24" text-anchor="middle" fill="white"
                    font-family="system-ui, Arial, sans-serif" font-size="7" font-weight="700" letter-spacing="0.5px">INTERSTATE</text>
              <!-- Highway number -->
              <text x="45" y="68" text-anchor="middle" fill="white"
                    font-family="system-ui, Arial, sans-serif" font-size="36" font-weight="900" letter-spacing="-1px">17</text>
            </svg>
          </div>

          <!-- Loop 101 Shield -->
          <div class="loop-shield">
            <svg viewBox="0 0 80 80" class="w-20 h-20">
              <!-- Outer ring -->
              <circle cx="40" cy="40" r="37" fill="#000000"/>
              <!-- Inner circle -->
              <circle cx="40" cy="40" r="34" fill="#ffd700"/>
              <!-- Inner highlight -->
              <circle cx="40" cy="40" r="32" fill="none" stroke="rgba(255,255,255,0.4)" stroke-width="1"/>
              <!-- Loop text -->
              <text x="40" y="25" text-anchor="middle" fill="black"
                    font-family="system-ui, Arial, sans-serif" font-size="7" font-weight="800" letter-spacing="0.8px">LOOP</text>
              <!-- Highway number -->
              <text x="40" y="54" text-anchor="middle" fill="black"
                    font-family="system-ui, Arial, sans-serif" font-size="20" font-weight="900" letter-spacing="-0.5px">101</text>
            </svg>
          </div>

          <!-- Loop 202 Shield -->
          <div class="loop-shield">
            <svg viewBox="0 0 80 80" class="w-20 h-20">
              <!-- Outer ring -->
              <circle cx="40" cy="40" r="37" fill="#000000"/>
              <!-- Inner circle -->
              <circle cx="40" cy="40" r="34" fill="#ffd700"/>
              <!-- Inner highlight -->
              <circle cx="40" cy="40" r="32" fill="none" stroke="rgba(255,255,255,0.4)" stroke-width="1"/>
              <!-- Loop text -->
              <text x="40" y="25" text-anchor="middle" fill="black"
                    font-family="system-ui, Arial, sans-serif" font-size="7" font-weight="800" letter-spacing="0.8px">LOOP</text>
              <!-- Highway number -->
              <text x="40" y="54" text-anchor="middle" fill="black"
                    font-family="system-ui, Arial, sans-serif" font-size="20" font-weight="900" letter-spacing="-0.5px">202</text>
            </svg>
          </div>
        </div>
      </div>

      <!-- Priority Cities -->
      <div class="mb-8">
        <h3 class="font-bold text-gray-900 mb-4 text-lg">Priority Cities</h3>

        <div class="flex justify-center items-center gap-3 flex-wrap">
          <span class="bg-orange-500 text-white font-medium px-4 py-2 rounded-full">Phoenix</span>
          <span class="bg-orange-500 text-white font-medium px-4 py-2 rounded-full">Glendale</span>
          <span class="bg-orange-500 text-white font-medium px-4 py-2 rounded-full">Tempe</span>
          <span class="bg-orange-500 text-white font-medium px-4 py-2 rounded-full">Scottsdale</span>
          <span class="bg-orange-500 text-white font-medium px-4 py-2 rounded-full">Mesa</span>
        </div>
      </div>

      <!-- Response Time -->
      <div class="text-center">
        <div class="inline-block bg-gray-100 px-4 py-2 rounded-lg">
          <p class="text-gray-700 font-medium">
            Typical <strong>30-90 min response</strong> inside metro â€” fastest along I-10/I-17 core
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .interstate-shield {
    display: inline-block;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .loop-shield {
    display: inline-block;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .interstate-shield svg {
    filter: drop-shadow(0 4px 12px rgba(30, 58, 138, 0.4)) drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  .loop-shield svg {
    filter: drop-shadow(0 4px 12px rgba(255, 215, 0, 0.4)) drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  .interstate-shield:hover,
  .loop-shield:hover {
    transform: translateY(-3px) scale(1.05);
  }

  .interstate-shield:hover svg {
    filter: drop-shadow(0 8px 20px rgba(30, 58, 138, 0.5)) drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .loop-shield:hover svg {
    filter: drop-shadow(0 8px 20px rgba(255, 215, 0, 0.5)) drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .interstate-shield svg path,
  .loop-shield svg circle {
    transition: all 0.3s ease;
  }

  /* Add subtle animation on load */
  .interstate-shield,
  .loop-shield {
    animation: fadeInUp 0.6s ease-out;
  }

  .interstate-shield:nth-child(2) { animation-delay: 0.1s; }
  .interstate-shield:nth-child(3) { animation-delay: 0.2s; }
  .loop-shield:nth-child(4) { animation-delay: 0.3s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>